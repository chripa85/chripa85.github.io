@page "/"

@if (_shortcutMap == null)
{
    <MudButton OnClick="@(async () => await Load())" Disabled=@_isLoading Variant="Variant.Outlined" Color="Color.Primary">
        @if (_isLoading)
        {
            <MudProgressCircular Color="@Color.Info" Size="Size.Large" Indeterminate />
            <MudText>Loading...</MudText>
        }
        else
        {
            <MudText>Load items</MudText>
        }
    </MudButton>
}
else
{
    <ShortcutView ShortcutMap="@_shortcutMap" />
}